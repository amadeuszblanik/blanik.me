{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "jsxSingleQuote": false,
        "printWidth": 120,
        "trailingComma": "all"
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "strict": [
      "error",
      "safe"
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "vars-on-top": "error",
    "prefer-arrow-callback": "error",
    "no-magic-numbers": [
      "error",
      {
        "detectObjects": false
      }
    ]
  }
}
